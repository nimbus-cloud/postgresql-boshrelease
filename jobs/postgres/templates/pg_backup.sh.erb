#!/bin/bash

if [ -z "$1" ]; then
	echo "Please specify deployment as 1st parameter."
	exit 1;
fi

export BACKUP_DIR="/var/vcap/services_backup/$1/postgres"
export TIMESTAMP=`date +%Y%m%d-%H%M`

mkdir -p $BACKUP_DIR

echo "Backup starting: `date`"
/var/vcap/packages/postgres/bin/pg_dumpall -U vcap -p <%= p("databases.port") %> | gzip -c > $BACKUP_DIR/$TIMESTAMP.all.dbs.out.gz
echo "Backup completed: `date`"

echo "Cleaning up backups older than <%= p("databases.backup.retention_days") %> days.."
find $BACKUP_DIR -mtime +<%= p("databases.backup.retention_days") %> -exec rm -rvf {} \;

echo "Done."
